---
import type { CollectionEntry } from 'astro:content';

type Props = {
  post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;
---

<style>
  li {
    margin-bottom: 0.5rem;
  }

  a {
    font-size: 1.25rem;
    font-weight: bold;
    text-decoration: none;
  }
</style>
<li>
  <a href={`/posts/` + post.slug}>{post.data.title}</a>
</li>
